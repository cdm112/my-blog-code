<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.author %>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> 

<%= render 'comments/form', comment: @comment %>

<% @post.comments.each do |comment| %>
<%= comment.author %> said....
<%= comment.comment_entry %>

<% end %>

